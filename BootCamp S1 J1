#1 fonction max
def max(num1,num2):
    if (num1 >num2):
        print("Le plus grand est %d" % num1)
    else:
        print("Le plus grand est %d" % num2)
max(2,2)





#2 fonction maxofthree
def max_of_three(num1,num2,num3):
    if (num1 > num2):
        max=num1
    else:
        max=num2
    if (max < num3):
        max=num3
    return max

        
max_of_three(1,2,3)


#3 fonction longueur de chaine de caractÃ¨re
def longueur(car):
    i = 0
    for f in car:
        i+=1
    return i
longueur("Ceci est un test")


#4 Test voyelle 
def voyelle(car):
    Test=False
    liste_voyelles=["a","e","i","o","u","y"]
    for i in liste_voyelles:
        if car == i:
            Test=True
    return Test
voyelle("b")


#5 LANGUE DU VOLEUR
def voleur(car):
    liste_voyelles=["a","e","i","o","u","y"," "]
    traduit = ""
    for i in car:
        Test=True
        for j in liste_voyelles:
            if i == j:
                Test=False
        if Test:
            traduit += i + "o" + i
        else:
            traduit +=  i
    return traduit
voleur("this is fun")
            
            
            
            
#6 additionner et multiplier
def add(chiffre):
    sum=0
    for i in chiffre:
        sum += i
    return sum
def mult(chiffre):
    result=1
    for i in chiffre:
        result*=i
    return result
add([1,2,3])
mult([1,2,3,4])

